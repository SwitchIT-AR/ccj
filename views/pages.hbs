<div class="container-fluid" style="margin-top: 100px;">
    <h1>Pages Update</h1>
    <span>Seleccione la pagina a editar</span>
    <br />
    <select id="page" class="form-control-sm" onchange="redirectToSelectedOption()">
        <option value="">Seleccione una pagina</option>

        <option value="english">english</option>
        <option value="primaria">primaria</option>
    </select>

    <form action="/pages/pagesUpdate" method="post">
        <div class="form-row">
            <div class="col">
                <label for="pagina">ID</label>
                <input type="text" class="form-control" name="_id" value="{{pages._id}}"><br>

                <label for="pagina">Pagina:</label>
                <input type="text" class="form-control" name="pagina" value="{{pages.ruta}}"><br>

                <label for="titulo">Titulo:</label>
                <input type="text" class="form-control" name="titulo" value="{{pages.titulo}}"><br>

                <label for="saludo">Saludo:</label>
                <input type="text" class="form-control" name="saludo" value="{{pages.saludo}}"><br>

                <label for="subTitulo1">Subtitulo 1:</label>
                <input type="text" class="form-control" name="subTitulo1" value="{{pages.subTitulo1}}"><br>

                <label for="subTitulo2">Subtitulo 2:</label>
                <input type="text" class="form-control" name="subTitulo2" value="{{pages.subTitulo2}}"><br>

                <label for="subTitulo3">Subtitulo 3:</label>
                <input type="text" class="form-control" name="subTitulo3" value="{{pages.subTitulo3}}"><br>

                <label for="subTitulo4">Subtitulo 4:</label>
                <input type="text" class="form-control" name="subTitulo4" value="{{pages.subTitulo4}}"><br>

                <label for="subTitulo5">Subtitulo 5:</label>
                <input type="text" class="form-control" name="subTitulo5" value="{{pages.subTitulo5}}"><br>

                <label for="parrafo1">Parrafo 1:</label>
                <input type="text" class="form-control" name="parrafo1" value="{{pages.parrafo1}}"><br>

                <label for="parrafo2">Parrafo 2:</label>
                <input type="text" class="form-control" name="parrafo2" value="{{pages.parrafo2}}"><br>

                <label for="parrafo3">Parrafo 3:</label>
                <input type="text" class="form-control" name="parrafo3" value="{{pages.parrafo3}}"><br>

                <label for="parrafo4">Parrafo 4:</label>
                <input type="text" class="form-control" name="parrafo4" value="{{pages.parrafo4}}"><br>

                <label for="cardTitulo1">Card Titulo 1:</label>
                <input type="text" class="form-control" name="cardTitulo1" value="{{pages.cardTitulo1}}"><br>
            </div>
            <div class="col">
                <label for="cardTexto1">Card Texto 1:</label>
                <input type="text" class="form-control" name="cardTexto1" value="{{pages.cardTexto1}}"><br>

                <label for="cardTitulo2">Card Titulo 2:</label>
                <input type="text" class="form-control" name="cardTitulo2" value="{{pages.cardTitulo2}}"><br>

                <label for="cardTexto2">Card Texto 2:</label>
                <input type="text" class="form-control" name="cardTexto2" value="{{pages.cardTexto2}}"><br>

                <label for="cardTitulo3">Card Titulo 3:</label>
                <input type="text" class="form-control" name="cardTitulo3" value="{{pages.cardTitulo3}}"><br>

                <label for="cardTexto3">Card Texto 3:</label>
                <input type="text" class="form-control" name="cardTexto3" value="{{pages.cardTexto3}}"><br>
                <label for="cardTitulo4">Card Titulo 4:</label>
                <input type="text" class="form-control" name="cardTitulo4" value="{{pages.cardTitulo4}}"><br>

                <label for="cardTexto4">Card Texto 4:</label>
                <input type="text" class="form-control" name="cardTexto4" value="{{pages.cardTexto4}}"><br>

                <label for="horarioEntrada">Horario de Entrada:</label>
                <input type="text" class="form-control" name="horarioEntrada" value="{{pages.horarioEntrada}}"><br>

                <label for="almuerzo">Almuerzo:</label>
                <input type="text" class="form-control" name="almuerzo" value="{{pages.almuerzo}}"><br>

                <label for="auxText1">Auxiliar Texto 1:</label>
                <input type="text" class="form-control" name="auxText1" value="{{pages.auxText1}}"><br>

                <label for="auxText2">Auxiliar Texto 2:</label>
                <input type="text" class="form-control" name="auxText2" value="{{pages.auxText2}}"><br>

                <label for="auxText3">Auxiliar Texto 3:</label>
                <input type="text" class="form-control" name="auxText3" value="{{pages.auxText3}}"><br>

                <label for="auxText4">Auxiliar Texto 4:</label>
                <input type="text" class="form-control" name="auxText4" value="{{pages.auxText4}}"><br>

                <input class="form-control" type="submit" value="Guardar">
            </div>
        </div>
    </form>
</div>
<script src="/dist/js/pages/pages.js">