      <form action="" id="form-contacto">
        <div class="form-group">
          <label for="Nombre">NOMBRE</label>
          <input class="form-control" id="Nombre" maxlength="50" name="Nombre" type="text" value="" />
          <span class="field-validation-valid" data-valmsg-for="Nombre" data-valmsg-replace="true"
            style="color: red"></span>
        </div>
        <div class="form-group">
          <label for="Email">EMAIL</label>
          <input class="form-control" id="Email" maxlength="50" name="Email" type="text" value="" />
          <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true" id="validacionEmail"
            style="color: red"></span>
        </div>
        <div class="form-group">
          <label for="Mensaje">MENSAJE</label>
          <textarea class="form-control" cols="20" id="Mensaje" maxlength="300" name="Mensaje" rows="6"
            type="text"></textarea>
          <span class="field-validation-valid" data-valmsg-for="Mensaje" data-valmsg-replace="true"
            style="color: red"></span>
        </div>
        <input type="button" value="ENVIAR" class="btn btn-info px-5 mb-2" onclick="mensajeAyuda()" />
        <script>
          function mensajeAyuda() {
            var nombre =
              document.getElementById("Nombre").value; var email =
                document.getElementById("Email").value; var mensaje =
                  document.getElementById("Mensaje").value; llamarVistaParcial(nombre,
                    email, mensaje);
          } function llamarVistaParcial(nombre, email, mensaje) {
            var urlCompleta = "https://contact.switchit.com.ar/ccj/contact"; var
              request = $.ajax({
                url: urlCompleta, type: "POST", dataType: "json",
                data: { nombre: nombre, email: email, mensaje: mensaje, },
              });
            request.done(function (response) {
              document.getElementById("form-contacto").reset();
              $("#modalExito").modal("show");
            }); request.fail(function (response) {
              document.getElementById("form-contacto").reset();
              $("#modalExito").modal("show");
            }); /* request.fail(function (jqXHR,
          textStatus) { document.getElementById("form-contacto").reset();
          $('#modalFail').modal('show'); })*/ }
        </script>
      </form>
