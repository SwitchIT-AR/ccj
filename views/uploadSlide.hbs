<section class='content'>
  <div class='container-fluid'>
    <!-- row -->
    <div class='row'>
      <div class='col-12'>
        <div class='card card-teal'>
          <div class='card-header'>
            <h3 class='card-title'>Alta de Materiales</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form class='form-horizontal' id='order' action='/api/newSlide/1' method='POST' enctype="multipart/form-data">
            <div class='card-body'>
              <div class='row'>
                <div class='form-group col-sm-6 col-md-4'>
                  <label for='Link'>Link</label>
                  <input type='text' class='form-control' id='link' name='link' placeholder='link  a redirigir'
                    required />
                </div>
				                  <div class='form-group col-sm-6 col-md-4'>
                  <label for='imagenAlt'>imagen Alternative text</label>
                  <input type='text' class='form-control' id='imagenAlt' placeholder='imagenAlt' name='imagenAlt' />
                </div>
                <div class='form-group col-sm-6 col-md-4'>
                  <label for='text'>texto del boton</label>
                  <input type='text' class='form-control' id='text' placeholder='text' name='text' />
                </div>
                <div class='form-group col-sm-6 col-md-4'>
                  <label for='images'>Imagenes: Cargar siempre 3: slide1-fhd.jpeg , slide1-hd.jpg y slide.jpg</label>
                  <input type="file" multiple class='form-control-file'  name='images' placeholder='images' />
                </div>
                                <div class='form-group col-sm-6 col-md-4'>
                  <label for='order'>Orden</label>
                  <select name='order'  class='form-control' onchange='changeAction(this.value)'>
                  <option  value="1">1</option>
                  <option value="2">2</option>
                  <option  value="3">3</option>
                  <option  value="4">4</option>
                  </select>
                </div>

              </div>
            </div>

            <!-- /.card-body -->
            <div class='card-footer'>
              <div class='float-right'>
                <button type='submit' class='btn bg-teal font-weight-bold mr-2'>
                  CREAR SLIDE</button>
                <button type='reset' class='btn btn-default'>Cancelar</button>
              </div>
            </div>
            <!-- /.card-footer -->
          </form>
        </div>
      </div>
      <script >
function changeAction(val){
    document.getElementById('order').setAttribute('action', "/api/newSlide/" + val);
}
</script>
